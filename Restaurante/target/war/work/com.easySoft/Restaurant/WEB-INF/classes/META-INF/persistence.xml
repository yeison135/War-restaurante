<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="restaurant" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.easysoft.persistence.Ensalada</class>
    <class>com.easysoft.persistence.Costo</class>
    <class>com.easysoft.persistence.Pedido</class>
    <class>com.easysoft.persistence.Sopa</class>
    <class>com.easysoft.persistence.Fruta</class>
    <class>com.easysoft.persistence.Jugo</class>
    <class>com.easysoft.persistence.Granos</class>
    <class>com.easysoft.persistence.Restaurante</class>
    <class>com.easysoft.persistence.Carne</class>
    <class>com.easysoft.persistence.TipoMenu</class>
    <class>com.easysoft.persistence.Menu</class>
    <class>com.easysoft.persistence.Persona</class>
    <class>com.easysoft.persistence.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/restaurant?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
